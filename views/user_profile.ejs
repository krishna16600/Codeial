<div class="container-fluid mt-3">
    <div class="row">
        <div class="col col-sm-12 col-md-4 mb-2">
            <div class="card">
                <div class="card-header text-center" style="font-style: italic; ">
                     <h3><%= user_profile.name%></h3>
                </div>
                <div class="card-body text-center">
                    <% if(user_profile.avatar!=null) { %>
                    <img src="<%= user_profile.avatar %>" alt="image" width="200" height="200">
                    <% } else { %> 
                        <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" alt="" width="100">
                    <% } %>
                </div>
                <div class="card-footer text-center">
                    <% if(!user_profile.bio || user_profile.bio=='') { %>
                        <small style="text-decoration: underline; text-transform: capitalize; font-style: italic;">Let others know lil about you, Update Bio!</small>
                    <% } else { %>
                            <small style="text-decoration: underline; text-transform: capitalize; font-style: italic;"> <%= user_profile.bio %></small>
                        <% } %>
                </div>
             </div>
             </div>
        <div class="col col-sm-12 col-md-8">
            <h3 class="text-center">Update details</h3>
            <form action="/users/update-details/<%= user_profile.id %>" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <h4 >Name: </h4>
                    <input type="text" class="form-control" name="name" placeholder="Update Name" value="<%= user_profile.name %>" required>
                </div>
                <div class="form-group">
                    <h4 >Email: </h4>
                    <input type="text" class="form-control" name="email" placeholder="Update Email" value="<%= user_profile.email %>" required>
                </div>
                <div class="form-group">
                    <h4 >Profile Picture: </h4>
                    <input type="file" class="form-control" name="avatar" placeholder="Profile picture">
                </div>
                <div class="form-group">
                    <h4 >Bio: </h4>
                    <input type="text" class="form-control" name="bio" placeholder="<%= user_profile.bio %>" value="<%= user_profile.bio %>" >
                </div>
                <div class="form-group">
                    <h4 >Password: </h4>
                    <input type="password" class="form-control" name="password" placeholder="Either Update or enter old password" required>
                </div>
                <button class="btn btn-success btn-block">Update</button>
            </form>
        </div>
    </div>
</div>