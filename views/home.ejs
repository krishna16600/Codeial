

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col col-md-3 col-sm-4">
            <h1>groups</h1>
        </div>
        <div class="col col-md-7 col-sm-4" >
          <% if(locals.user){ %>
            <div class="container mt-3">
                <div class="row">
                    <div class="col col-sm-6  col-md-2 col-lg-1 ">
                        <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" class="rounded-circle" width="70px" height="60px" alt="Image">
                    </div>
                    <div class="col col-sm-6 col-md-10 col-lg-10">
                        <form action="/posts/create" method="POST">
                            <div class="form-group">
                                <textarea class="form-control" name="content" id="" cols="90" rows="2" placeholder="What's on your mind, <%= user.name %>?" required></textarea>
                            </div>
                            <button class="btn btn-success btn-block btn-sm">Post</button>
                        </form>
                     </div>
                </div>
            </div>
           
            <div class="container mt-3 mx-auto">
               <% for(post of posts) { %>
                        <%- include('_post') -%>
                <% } %>
            </div>
            <% } %>
        </div>

        <div class="col col-md-2 col-sm-4">
            <h3 class="text-center">Friend List</h3>

           <% if(locals.user) {%> 
            <div class="row">
                <% for(user of all_users) {%>
                   <div class="container d-flex justify-content-between p-2" style="width: 100%">
                      <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" class="rounded-circle" width="50px" height="50px" alt="Image" class="mr-3">
                        <p class="mt-3"><%= user.name %></p>
                        <a href="/users/profile/<%= user.id %>" class="mt-3">See profile</a>
                   </div>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
</div>