


    <div class="row mt-3">
        <div class="col  col-sm-4 col-md-2">
            <h1>groups</h1>
        </div>
        <div class="col col-sm-4 col-md-8" >
          <% if(locals.user){ %>
            <div class="container mt-3">
                <div class="row">
                    <div class="col col-sm-6  col-md-2 col-lg-1 ">
                        <% if(locals.user.avatar!=null) { %>
                            <img src="<%= locals.user.avatar %>" alt="image" width="60" height="60">
                            <% } else { %> 
                                <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" alt="" width="60" height="60">
                            <% } %>                 
                           </div>
                    <div class="col col-sm-6 col-md-10 col-lg-10">
                        <form action="/posts/create" enctype="multipart/form-data" method="POST">
                            <div class="form-group">
                                <textarea class="form-control" name="content" id="" cols="90" rows="2" placeholder="What's on your mind, <%= user.name %>?" required></textarea>
                            </div>
                            <div class="form-group">
                                <input type="file" class="form-control" name="picture" id="">
                            </div>
                            <button class="btn btn-success btn-block btn-sm">Post</button>
                        </form>
                     </div>
                </div>
            </div>
           
            <div class="container mt-3 mx-auto">
               <% for(post of posts) { %>
                        <%- include('_post') -%>
                <% } %>
            </div>
            <% } %>
        </div>

        <div class="col  col-sm-4 col-md-2 col-sm-4">
            <h3 class="text-center">Friend List</h3>

           <% if(locals.user) {%> 
        
                <% for(user of all_users) {%>
                    <div class="row mb-2 mt-2  align-items-center">
                        <div class="col col-md-2">
                            <% if(user.avatar!=null) { %>
                                <img src="<%= user.avatar %>" class="rounded-circle" alt="image" width="40" height="40">
                                <% } else { %> 
                                    <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" class="rounded-circle" alt="image" width="40" height="40">
                                <% } %>                          
                             </div>
                        <div class="col col-md-8 text-center">
                                <a href="/users/profile/<%= user.id %>" class="mt-3"><%= user.name %></a>
                        </div>
                         <div class="col col-md-2">
                                <p>M</p>
                        </div>
                     </div>
                <% } %>
            
            <% } %>
        </div>
    </div>
