<div class="container mt-2">
    <h5>Comments: </h5>
  
        <% for(comment of post.comments) { %>
         <div class="container d-flex">
             <p><%= comment.user.name %>: </p>
             <p class="ml-3"> <%= comment.content %></p>
             <p>
                 <% if(locals.user && locals.user.id == comment.user.id || locals.user.id == post.user.id){ %>
                     <small>
                         <a href="/comments/destroy/<%= comment.id %>" class="btn btn-danger btn-sm "> Delete Comment</a>
                     </small>
                     <% } %>
             </p>
         </div>
         <% } %>
   
</div>

 <!--form for comments-->

     <div class="container-fluid  mt-2 d-flex ">
         <img src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg" class="rounded-circle" width="40px" height="40px" alt="Image" class="mr-3">
         <div class="container">
             <form action="/comments/create" method="POST">
                 <div class="form-group">
                     <input class="form-control" type="text" name="content" placeholder="Add a comment.." required>
                 </div>
                 <div class="form-group">
                     <input class="form-control" type="hidden" name="post" value="<%= post._id %>">
                 </div>
                 <button class="btn btn-success btn-block btn-sm">Add comment</button>
             </form>
          </div>
     </div>
